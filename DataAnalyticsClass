package todolist;

import java.util.ArrayList;

public class DataAnalytics {

    public static void showAnalytics(ArrayList<String> list) {
        int totalTasks = list.size(); 
        int completedTasks = 0; 
        int pendingTasks = 0; 

        // iterate through each task
        for (String task : list) {
            if (task.contains("[X]")) { // this checks if the task stated is completed or not
                completedTasks++;
            } else { 
                pendingTasks++;
            }
        }

        // Display the analytics 
        System.out.println("\n=== Analytics Dashboard ===");
        System.out.println("Total Tasks: " + totalTasks);
        System.out.println("Completed Tasks: " + completedTasks);
        System.out.println("Pending Tasks: " + pendingTasks);

        // Avoid division by zero if there are no tasks
        if (totalTasks > 0) {
            double completeRate = (completedTasks / (double) totalTasks) * 100;
            System.out.printf("Completion Rate: %.2f%% \n", completeRate);
        } else {
            System.out.println("Completion Rate: N/A (No tasks available)");
        }
    }

    public static void main(String[] args) {
       //Example
        ArrayList<String> list = new ArrayList<>();
        list.add("[X] Finish Assignment - Complete the Java programming assignment - 2024-10-15 - Homework - High");
        list.add("[ ] Grocery Shopping - Buy groceries for the week - 2024-10-16 - Personal - Medium");
        list.add("[X] Submit Report - Weekly progress report submission - 2024-10-17 - Work - Low");
        list.add("[ ] Prepare Presentation - Prepare slides for the meeting - 2024-10-18 - Work - High");

        // Show the analytics
        showAnalytics(list);
    }
}
